<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="4dp"
    app:cardBackgroundColor="#fff"
    android:elevation="4dp"
    >

                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:id="@+id/r1"
                    android:layout_weight="10"
                    android:layout_centerVertical="true"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        app:civ_border_color="#40000000"
                        app:civ_border_width="2dp" />


                </RelativeLayout>


                <!-- section for the price and name-->


                    <TextView
                        android:id="@+id/name_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/price_product_list"
                        android:layout_toRightOf="@+id/r1"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/fonts"
                        android:text="معكرونة "
                        android:textColor="#4b4a4a"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/price_product_list"
                        android:textColor="#ff5959"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price product"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="12dp"
                        android:textSize="20sp"
                        android:layout_toRightOf="@+id/r1"
                        />




                    <!-- section for the quantity product -->

                    <RelativeLayout
                        android:layout_marginEnd="20dp"
                       android:layout_toLeftOf="@+id/r4"
                        android:id="@+id/r3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="3dp"
                            android:orientation="vertical"
                            android:weightSum="100">

                            <ImageView
                                android:id="@+id/increase_qu"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_weight="20"
                                app:srcCompat="@drawable/ic_add_black_24dp" />

                            <TextView
                                android:gravity="center"
                                android:id="@+id/display_qu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="40"
                                android:text="10"
                                android:padding="2dp"
                                android:textColor="#000"
                                android:textSize="20sp" />

                            <ImageView
                                android:id="@+id/decrease_qu"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_weight="20"
                                app:srcCompat="@drawable/ic_remove_black_24dp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <!-- section for the delete product-->

                    <RelativeLayout

                        android:id="@+id/r4"
                        android:layout_marginEnd="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_weight="30"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/delete_product_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"

                            app:srcCompat="@drawable/ic_cancel_black_24dp" />

                    </RelativeLayout>

                </RelativeLayout>

</android.support.v7.widget.CardView>