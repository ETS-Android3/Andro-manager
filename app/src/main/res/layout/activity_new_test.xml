<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.commerce.tr.commerceapplication.forsecondLibrary.newTest"
    android:id="@+id/container"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <fragment
                android:layout_centerInParent="true"
                android:id="@+id/barcode"
                class="com.google.android.gms.samples.vision.barcodereader.BarcodeCapture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:gvb_auto_focus="true"
                app:gvb_code_format="all_format"
                app:gvb_flash="false"
                app:gvb_draw="true"
                app:gvb_rect_colors="@array/rect_color" />


        <ImageView
            android:id="@+id/shape_focus"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            app:srcCompat="@drawable/shape_for_camera" />







    </RelativeLayout>




</RelativeLayout>
